{
  "format_version": "1.16.100",
  "minecraft:entity": {
    "description": {
      "identifier": "re_hookshot:hookshot_bullet",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:snowball"
    },

    "component_groups": {
      "instant_despawn": {
        "minecraft:instant_despawn": {
          "remove_child_entities": false
        }
      },
      "kill_timer": {
        "minecraft:timer": {
          "time": 5,
          "time_down_event": {
            "event": "hookshot:time_up"
          }
        }
      },
      "process_delay": {
        "minecraft:timer": {
          "time": 0.2,
          "time_down_event": {
            "event": "hookshot:hit_process"
          }
        }
      }
    },

    "components": {
      "minecraft:collision_box": {
        "width": 0.0,
        "height": 0.0
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": {
              "test": "in_lava",
              "subject": "self",
              "operator": "==",
              "value": true
            },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:damage_sensor":{
        "triggers": [
          {
            "cause": "all",
            "deals_damage": false
          }
        ]
      },
      "minecraft:projectile": {
        "on_hit": {
          "impact_damage": {
            "knockback": false,
            "semi_random_diff_damage": false,
            "destroy_on_hit": false
          },
          "stick_in_ground": {
            "shake_time": 0.35
          },
          "arrow_effect": {},
          "definition_event": {
            "impact_target": false,
            "event_trigger": {
              "event": "hookshot:hit",
              "taget": "self"
            }
          }
        },
        "hit_sound": "bow.hit",
        "power": 5,
        "gravity": 0.0,
        "uncertainty_base": 0,
        "uncertainty_multiplier": 0,
        "anchor": 1,
        "should_bounce": true,
        "offset": [0, 0.3, 0 ]
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
        "default_values": {
          "max_optimized_distance": 80.0,
          "max_dropped_ticks": 7,
          "use_motion_prediction_hints": true
        }
      }
    },
    "events": {
      //entity spawned
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "add": {
              "component_groups": [
                "kill_timer"
              ]
            }
          },
          {
            "run_command": {
              "command": [
                "tag @s add HookshotBullet",
                "tag @s add Hookshot"
              ]
            }
          }
        ]
      },
      //hit
      "hookshot:hit": {
        "sequence": [
          {
            "add": {
              "component_groups": [
                "process_delay"
              ]
            }
          }
        ]
      },
      //hit process
      "hookshot:hit_process": {
        "sequence": [
          {
            "remove": {
              "component_groups": [
                "process_delay"
              ]
            }
          },
          {
            "run_command": {
              "command": [
                "function BlockHit"
              ]
            }
          }
        ]
      },
      //instant kill
      "hookshot:instant_kill": {
        "add": {
          "component_groups": [
            "instant_despawn"
          ]
        }
      },
      //times up
      "hookshot:time_up": {
        "sequence": [
          {
            "run_command": {
              "command": [
                "function Reset"
              ]
            }
          },
          {
            "trigger": {
              "event": "hookshot:instant_kill",
              "target": "self"
            }
          }
        ]
      }
    }
  }
}