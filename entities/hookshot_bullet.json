{
  "format_version": "1.16.100",
  "minecraft:entity": {
    "description": {
      "identifier": "re_hookshot:hookshot_bullet",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:snowball"
    },

    "component_groups": {
      "hookshot:instant_kill": {
        "minecraft:instant_despawn": {
          "remove_child_entities": false
        }
      }
    },

    "components": {
      "minecraft:collision_box": {
        "width": 0.25,
        "height": 0.25
      },
			"minecraft:damage_sensor": {
				"triggers":[
					{
						"cause": "all",
						"deal_damage": false
					}
				]
			},
      "minecraft:projectile": {
        "on_hit": {
          "impact_damage": {
            "knockback": false,
            "semi_random_diff_damage": false,
            "destroy_on_hit": false
          },
          "stick_in_ground": {
            "shake_time": 0.35
          },
          "arrow_effect": {}
        },
        "hit_sound": "bow.hit",
        "power": 5,
        "gravity": 0.0,
        "uncertainty_base": 0,
        "uncertainty_multiplier": 0,
        "anchor": 1,
        "should_bounce": true,
        "offset": [0, 0.3, 0 ]
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
        "default_values": {
          "max_optimized_distance": 80.0,
          "max_dropped_ticks": 7,
          "use_motion_prediction_hints": true
        }
      }
    },
    "events": {
      //entity spawned
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "run_command": {
              "command": [
                "tag @s add HookshotBullet",
                "tag @s add Hookshot"
              ]
            }
          }
        ]
      }
    }
  }
}