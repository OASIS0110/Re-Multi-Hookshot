{
    "format_version": "1.16.100",
    "minecraft:entity": {
      "description": {
        "identifier": "re_hookshot:test",
        "is_spawnable": false,
        "is_summonable": true,
        "is_experimental": false
      },
      "component_groups": {
        "summon_seat": {
          "minecraft:spawn_entity": {
            "entities": [
              {
                "max_wait_time": 1,
                "min_wait_time": 1,
                "num_to_spawn": 1,
                "single_use": true,
                "spawn_entity": "re_hookshot:hookshot_seat",
                "spawn_event": "minecraft:entity_spawned"
              }
            ]
          }
        },
        "hookshot:instant_kill": {
          "minecraft:instant_despawn": {
            "remove_child_entities": false
          }
        }
      },
      "components": {
        "minecraft:collision_box": {
          "width": 0.25,
          "height": 0.25
        },
        "minecraft:behavior.look_at_entity": {
          "angle_of_view_horizontal": 360,
          "angle_of_view_vertical": 360,
          "filters": {
            "test": "has_tag",
            "subject": "other",
            "operator": "equals",
            "value": "HookshotTempZero"
          },
          "look_distance": 99999,
          "look_time": [ 0 ,99999 ],
          "probablity": 1.00
        },
        "minecraft:hurt_on_condition": {
          "damage_conditions": [
            {
              "filters": {
                "test": "in_lava",
                "subject": "self",
                "operator": "==",
                "value": true
              },
              "cause": "lava",
              "damage_per_tick": 4
            }
          ]
        },
        "minecraft:damage_sensor":{
          "triggers": [
            {
              "cause": "all",
              "deals_damage": false
            }
          ]
        },
        "minecraft:pushable": {
          "is_pushable": false,
          "is_pushable_by_piston": true
        },
        "minecraft:conditional_bandwidth_optimization": {
          "default_values": {
            "max_optimized_distance": 80.0,
            "max_dropped_ticks": 7,
            "use_motion_prediction_hints": true
          }
        }
      },
      "events": {
        //entity spawned
        "minecraft:entity_spawned": {
          "sequence": [
            {
              "run_command": {
                "command": [
                  "tag @s add HookshotSeatSummon",
                  "tag @s add Hookshot",
                  "tp @s ~~~ facing @e[tag=HookshotCore,scores={HookshotTemp=0},c=1]"
                ]
              }
            },
            {
              "add": {
                "component_groups": [
                  "summon_seat"
                ]
              }
            }
          ]
        },
        "hookshot:instant_kill": {
          "sequence": [
            {
              "add": {
                "component_groups": [
                  "hookshot:instant_kill"
                ]
              }
            }
          ]
        }
      }
    }
  }